<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Ln"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aldwin.tablante.com.pcb_os.MainActivity"
    android:orientation="vertical"
    
    >


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="16dp"
         android:id="@+id/legend"
         >
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="24dp"
             android:text="     Os Project Process        "
             android:textAlignment="center"
             android:background="#FF5733"
             android:textColor="#FFF"
             />



     </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P: "
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Burst"
            android:textSize="16dp"
            android:id="@+id/ed1"
            android:inputType="number"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Arrival"
            android:id="@+id/ed2"
            android:textSize="16dp"
            android:inputType="number"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Service"
            android:id="@+id/ed3"
            android:textSize="16dp"
            android:inputType="number"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Priority"
            android:id="@+id/ed4"
            android:textSize="16dp"
            android:inputType="number"
            android:visibility="invisible"

            />

    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="16dp"
    >
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:id="@+id/radio01"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FCFS"
            android:checked="true"
            android:id="@+id/radio03"
            android:onClick="radioBut2"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SJF"
            android:id="@+id/radio04"
            android:onClick="radioBut1"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority"
            android:id="@+id/radio05"
            android:onClick="radioBut"
            />

    </RadioGroup>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/output3"
        android:layout_marginTop="32dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:onClick="createEditText"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/output"
        android:layout_marginTop="32dp"
        >





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/output1"
        >
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Calculate Process"
    android:layout_marginLeft="16dp"
    android:id="@+id/aya"
    android:enabled="false"
    android:textSize="16dp"
    android:onClick="radiocheck"

    />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Clear"
            android:onClick="clearValue"
            android:textSize="16dp"
            />


    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/fin"

        ></LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gantt Chart"
        android:background="#FF5733"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:alpha="0.5"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/finish"

        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Process:  Wait Time: Service Time  -  Arrival Time "
            android:textSize="16dp"
            android:background="#FF5733"
            android:alpha="0.7"
            android:textColor="#FFF"
            android:textAlignment="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/finish1"


        >

    </LinearLayout>
</LinearLayout>
</ScrollView>